{
    "name": "insertphpcode",
    "displayName": "InsertPhpCode",
    "description": "Insert code for PHP",
    "version": "0.0.1",
    "publisher": "nekoaisle",
    "engines": {
        "vscode": "^1.13.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.insertPhpCode"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [{
                "command": "extension.insertPhpCode",
                "title": "Insert PHP Code"
        }],
        "keybindings": [{
            "command": "extension.insertPhpCode",
            "key": "escape i"
        }],
		"configuration": {
			"type": "object",
			"title": "Insert PHP Code configuration",
			"properties": {
				"insertPhpCode.tempDir": {
					"type": "string",
					"default": "",
					"description": "テンプレートファイルが格納されているディレクトリを指定してください。"
				},
				"insertPhpCode.author": {
                    "type": "string",
                    "default": "",
					"description": "このファイルを作成した人名前を指定してください。"
				}
			}
		}
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
