{
    "name": "cpss-decorator",
    "displayName": "CPSS Decorator",
    "description": "Highlight for CPSS",
    "version": "0.0.1",
    "publisher": "nekoaisle",
    "engines": {
        "vscode": "^1.14.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [{
            "command": "nekoaisle.cpssDecoratorRefresh",
            "title": "CPSS Decorator: Refresh loaded design and highlight."
        }],
        "configuration": {
            "type": "object",
            "title": "Insert Code configuration",
            "properties": {
                "cpssDecorator.dataDir": {
                    "type": "string",
                    "default": "",
                    "description": "デザイン/ハイライトファイルが格納されているディレクトリを指定してください。"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
