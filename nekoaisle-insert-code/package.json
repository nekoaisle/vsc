{
    "name": "insert-code",
    "displayName": "Insert Code",
    "description": "拡張子ごとのメニューから選択してテンプレートを挿入する",
    "version": "0.0.1",
    "publisher": "nekoaisle",
    "engines": {
        "vscode": "^1.13.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:nekoaisle.insertCode",
        "onCommand:nekoaisle.insertCode.pinfoBase"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [{
            "command": "nekoaisle.insertCode",
            "title": "nekoaisle: Insert Code"
        }, {
            "command": "nekoaisle.insertCode.pinfoBase",
            "title": "nekoaisle: Insert base name"
        }],
        "configuration": {
            "type": "object",
            "title": "nekoaisle: Insert Code configuration",
            "properties": {
                "insertCode.tempDir": {
                    "type": "string",
                    "default": "",
                    "description": "テンプレートファイルが格納されているディレクトリを指定してください。"
                },
                "insertCode.author": {
                    "type": "string",
                    "default": "",
                    "description": "ファイルを作成する人の名前を指定してください。"
                },
                "insertCode.autoIndent": {
                    "type": "boolean",
                    "default": "",
                    "description": "オートインデントのデフォル値"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
