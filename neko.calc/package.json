{
	"name": "neko-calc",
	"displayName": "neko 電卓",
	"description": "コマンドライン計算機",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.38.1"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:neko.calc"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "neko.calc",
				"title": "計算結果をカーソル位置に挿入"
			}
		],
		"configuration": {
			"type": "object",
			"title": "neko: 電卓",
			"properties": {
				"nekoaisle-calc.format": {
					"type": "string",
					"default": "%d",
					"description": "書式文字列"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.39.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.2"
	}
}
