	"if 単項": {
		"prefix": "if",
		"body": [
			"if [[ ${1|-z,-n,-d,-f,-s,-e,-r,-w,-x|} \\$${2:変数1} ]];then",
			"\t",
			"fi"
		],
		"description": "単項のif文"
	},
	"if ２項": {
		"prefix": "if",
		"body": [
			"if [[ \\${${1:変数1}} ${2|=,!=,-nt,-ot,-eq,-ne,-lt,-le,-gt,-ge|} \\${${3:変数2}} ]];then",
			"\t",
			"fi"
		],
		"description": "２項のif文"
	},
	"case": {
		"prefix": "case",
		"body": [
			"case ${1:変数} in",
			"\t)",
			"\t\t;;",
			"\t*)",
			"\t\t;;",
			"esac"
		],
		"description": "case 文"
	},
	"while": {
		"prefix": "while",
		"body": [
			"while [ 条件 ]; do",
			"\t",
			"done"
		],
		"description": "while 文"
	},
	"for": {
		"prefix": "for",
		"body": [
			"for ${1:変数} in ${2:引数}; do",
			"\t",
			"done"
		],
		"description": "for 文"
	},
	"function": {
		"prefix": "function",
		"body": [
			"#==========================================================",
			"# ${1:タイトル}",
			"# @param \\$1 ",
			"# @return ",
			"#==========================================================",
			"function ${2:関数名}() {",
			"}",
		],
		"description": "関数宣言"
	},
	"rem": {
		"prefix": "#===",
		"body": "#=========================================================="
	},
	"Here document": {
		"prefix": "<<",
